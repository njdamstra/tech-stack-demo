---
import LoginView from '../views/LoginView.vue';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Appwrite + Astro SSR Anonymous Login</title>
    <style>
      body { font-family: system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, Noto Sans, Helvetica, Arial, "Apple Color Emoji", "Segoe UI Emoji"; margin: 2rem; }
      .wrap { max-width: 680px; margin: 0 auto; }
      .card { border: 1px solid #ddd; border-radius: 12px; padding: 16px; }
      h1 { margin-top: 0; }
    </style>
  </head>
  <body>
    <div class="wrap">
      <div class="card">
        <h1>Appwrite + Astro SSR Anonymous Login</h1>
        <p>Click the buttons below to login anonymously, fetch your user, and logout.</p>
        <LoginView client:load />
      </div>
    </div>
  </body>
</html>
